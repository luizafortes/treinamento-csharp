@model Projeto.Presentation.Mvc.Models.ClienteCadastroModel

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h5>Cadastro de Clientes</h5>
Preencha o formulário abaixo para realizar o cadastro.
<br />
<br />

<div class="text-danger">
    @Html.ValidationSummary()
</div>


@using (Html.BeginForm())
{

    <label>Nome do Cliente:</label>
    @Html.TextBoxFor(model => model.Nome,
        new
            {
            @class = "form-control col-md-4",
            @placehoder = "Digite aqui"
        })
    <br />

    <label>Email:</label>
    @Html.TextBoxFor(model => model.Email,
        new
        {
            @class = "form-control col-md-4",
            @placehoder = "Digite aqui"
        })
    <br />

    <label>CPF:</label>
    @Html.TextBoxFor(model => model.Cpf,
        new
        {
            @class = "form-control col-md-4",
            @placehoder = "Digite aqui"
        })
    <br />

    <label>Data de Nascimento:</label>
    @Html.TextBoxFor(model => model.DataNascimento,
        new
        {
            @class = "form-control col-md-4",
            @placehoder = "Digite aqui"
        })
    <br />

    <input type="submit" class="btn btn-success"
           value="Realizar Cadastro" />

}

