
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>COTI Informática</title>

    <!-- folhas de estilo CSS do bootstrap -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />

</head>
<body>

    <div class="container mt-3">

        <h3>Sistema de Controle de Clientes</h3>
        <p>Treinamento em C# WebDeveloper - COTI Informática</p>
        <ul>
            <li> <a href="/Cliente/Cadastro">Cadastrar Clientes</a> </li>
            <li> <a href="/Cliente/Consulta">Consultar Clientes</a> </li>
        </ul>
        <hr />

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@TempData["MensagemSucesso"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@TempData["MensagemErro"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @RenderBody()

    </div>

    <!-- Referência dos arquivos JavaScript do bootstrao e jquery -->
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>

</body>
</html>
